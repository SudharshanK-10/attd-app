<!DOCTYPE html>
<html>
    <body>
         <div class="frame">
        <table class="student-history">
            <thead>
                <tr>
                    <th>ROLL NO</th>
                    <th>STUDENT NAME</th>
                    <th>LECTURE TIMESTAMP</th>
                    <th>ATTENDANCE</th>
                </tr>
            </thead>

            <tbody>
                <% for(var i = 0; i < history.length; ++i) {%>
                    <tr>
                        <td><%= history[i].rollno %></td>
                        <td><%= history[i].name %></td>
                        <td><%= history[i].start_time.toDateString() %></td>
                        <td><%= history[i].ispresent %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
   </div>
    </body>
    <style>
    html {
         min-height: 100%;
    }
    body{
         background-color :#ebf1fa;
    }

    .frame{
         position:absolute;
         top:50%;
         left:50%;
         transform: translate(-50%,-50%);
         text-align:center;
         height: 500px;
    }
    .form {
         font-family: arial, sans-serif;
         font-size:25px;
         /*border:2px solid black;
         border-radius:50px;*/
         padding:50px 15px;
         /*background:linear-gradient(#FFC9FD,white);*/
    }
    table {
         font-family: arial, sans-serif;
         border-collapse: collapse;
         font-size: 15px;
    }

    td, th {
         border: 1px solid #000;
         text-align: center;
         padding: 8px;
    }

    tr:nth-child(even) {
         background-color: #b6bbc2;
    }

    b{
         font-size:30px;
    }
    .bh{
          display: inline;
          font-size: 25px;
    }
    </style>
</html>
